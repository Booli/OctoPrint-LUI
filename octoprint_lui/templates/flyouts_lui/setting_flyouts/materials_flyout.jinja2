<div class="Table">
    <div class="Table-row Table-header">
        <div class="Table-item">Material</div>
        <div class="Table-item">Extruder</div>
        <div class="Table-item">Bed</div>
        <div class="Table-item">Action</div>
    </div>

    <!-- ko keyboardForeach: temperature_profiles -->
    <div class="Table-row">
        <div class="Table-item profile_name">
            <input type="text" data-bind="value: name">
        </div>
        <div class="Table-item extruder_temp">
            <input type="number" data-bind="value: extruder">
        </div>
        <div class="Table-item bed_temp">
            <input type="number" data-bind="value: bed">
        </div>
        <div class="Table-item">
            <ul class="button-area">
                <li class="button failed-button"><a href="#delete" data-bind="click: $parent.removeTemperatureProfile"><span>Delete</span></a></li>
            </ul>
        </div>
    </div>
    <!-- /ko -->
</div>
<ul class="button-area">
    <li class="button"><a href="#save" data-bind="click: addTemperatureProfile"><span><i class="fa fa-plus"></i>Add profile</span></a>
</ul>   
