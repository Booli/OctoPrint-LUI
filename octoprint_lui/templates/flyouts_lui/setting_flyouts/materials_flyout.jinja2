<div class="Table Table-condensed">
    <div class="Table-row Table-header">
        <div class="Table-item Table-item-grow-3">
          <span style="width: 100%; text-align: left;">{{ _('Material') }}</span>
        </div>
        <div class="Table-item Table-item-grow-3">
          <span style="width: 100%; text-align: left;">{{ _('Extruder') }}</span>
        </div>
        <div class="Table-item Table-item-grow-2">
          <span style="width: 100%; text-align: left;">{{ _('Bed') }}</span>
        </div>
        <div class="Table-item" style="flex-basis: 110px; max-width: 105px;">
          <span style="width: 100%; text-align: right;">(&deg;C)</span>
        </div>
    </div>
    {% if local_addr %}
    {# Workaround .slice(0) fixes the on-screen keyboard not popping up #}
    <!-- ko keyboardForeach: settings.temperature_profiles.slice(0) -->
    {% else %}
    <!-- ko foreach: settings.temperature_profiles.slice(0) -->
    {% endif %}
  <div class="Table-row" data-bind="css: {disabled: $parent.disableRemove($data)}">
        <div class="Table-item Table-item-grow-3 profile_name">
            <input type="text" data-bind="value: name" />
        </div>
        <div class="Table-item Table-item-grow-3 extruder_temp">
            <input type="number" data-bind="value: extruder" />
        </div>
        <div class="Table-item Table-item-grow-2 bed_temp">
            <input type="number" data-bind="value: bed" />
        </div>
        <div class="Table-item" style="flex-basis: 110px; max-width: 105px;">
            <ul class="button-area">
                <li class="button failed-button"><a href="#delete" data-bind="click: $parent.settings.removeTemperatureProfile"><span data-bind="text: $root.materialButtonText($data)"></span></a></li>
            </ul>
        </div>
    </div>
    <!-- /ko -->
  
</div>
<ul class="button-area">
    <li class="button"><a href="#save" data-bind="touchClick: function () { settings.addTemperatureProfile() }"><span><i class="fa fa-plus"></i>{{ _('Add profile') }}</span></a>
</ul>   
