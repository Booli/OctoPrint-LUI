<div class="Table">
    <div class="Table-header Table-row">
        <div class="Table-item">Name</div>
    </div>
    <div class="Table-row" title="{{ _('Name of this OctoPrint instance, will be shown in the navigation bar and broadcast on the network') }}">
      <div class="Table-item">
        <label class="control-label" for="settings-appearanceName">{{ _('Title') }}</label>
      </div>
        <div class="Table-item"><input type="text" class="input-block-level" data-bind="value: appearance_name" id="settings-appearanceName" /></div>
    </div>
    <div class="Table-row Table-header">
        <div class="Table-item">
            Features
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
          Auto shutdown
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="click: toggleAutoShutdown, checked: autoShutdown, " id="settings-autoShutdown" />
                <label for="settings-autoShutdown"></label>
            </div>
        </div>
    </div>
    {% if model == "Bolt" or model == "Xcel" or debug_lui %}
    <div class="Table-row">
        <div class="Table-item">
          Check print dimensions
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="checked: feature_modelSizeDetection" id="settings-feature_modelSizeDetection" />
                <label for="settings-feature_modelSizeDetection"></label>
            </div>
        </div>
    </div>
    {% endif %}
    {% if model == "Xeed" or debug_lui %}
    <div class="Table-row">
        <div class="Table-item">
            Door safety feature
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="checked: settings.plugins.lui.action_door" id="settings-action_door" />
                <label for="settings-action_door"></label>
            </div>
        </div>
    </div>
    {% endif %}
    {% if model == "Xeed" or model == "Xcel" or debug_lui %}
    <div class="Table-row">
        <div class="Table-item">
            Filament detection
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="checked: settings.plugins.lui.action_filament" id="settings-action_filament" />
                <label for="settings-action_filament"></label>
            </div>
        </div>
    </div>
    {% endif %}
    {% if debug_lui %}
    <div class="Table-row">
        <div class="Table-item">
            Log communication to serial.log
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="checked: serial_log" id="settings-serialLog" />
                <label for="settings-serialLog"></label>
            </div>
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
            <span class="label label-important">{{ _('Warning') }} (might negatively impact performance)</span>
        </div>
    </div>
    {% endif %}
    <div class="Table-row hide" id="settings_debug_mode_check">
        <div class="Table-item">
            Debug mode
        </div>
        <div class="Table-item">
            <div class="check_toggle">
                <input type="checkbox" data-bind="checked: settings.plugins.lui.debug_lui" id="settings-debug_lui" />
                <label for="settings-debug_lui"></label>
            </div>
        </div>
    </div>
    <div class="Table-row hide" id="settings_debug_mode_text">
        <div class="Table-item">
            This will require a system restart to take effect. This mode is for debugging and special support request. This mode can change user experience dramatically!
        </div>
    </div>
</div>
