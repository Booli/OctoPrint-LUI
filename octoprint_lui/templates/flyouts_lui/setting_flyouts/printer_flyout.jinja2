<div class="Table">
    <div class="Table-header Table-row">
        <div class="Table-item">Name</div>
    </div>
    <div class="Table-row" title="{{ _('Name of this OctoPrint instance, will be shown in the navigation bar and broadcast on the network') }}">
        <div class="Table-item"<label class="control-label" for="settings-appearanceName">{{ _('Title') }}</label></div>
        <div class="Table-item"><input type="text" class="input-block-level" data-bind="value: appearance_name" id="settings-appearanceName"></div>
    </div>
    <div class="Table-row Table-header">
        <div class="Table-item">
            Maintenance
        </div>
    </div>
    <div class="Table-row Table-header">
        <div class="Table-item">
            Logs
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
            <input type="checkbox" data-bind="checked: serial_log" id="settings-serialLog"> {{ _('Log communication to serial.log') }} 
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
            <span class="label label-important">{{ _('Warning') }} (might negatively impact performance)</span>
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
            <input type="checkbox" data-bind="checked: settings.plugins.lui.action_door" id="settings-action_door"> {{ _('Door Action') }} 
        </div>
    </div>
    <div class="Table-row">
        <div class="Table-item">
            <input type="checkbox" data-bind="checked: settings.plugins.lui.action_filament" id="settings-action_filament"> {{ _('Filament Action') }} 
        </div>
    </div>
</div>
