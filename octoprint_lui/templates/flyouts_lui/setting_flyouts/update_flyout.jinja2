<div id="update">
	<div class="Table">
		<div class="Table-row Table-header">
			<div class="Table-item">
				Version infromation
			</div>
			<div class="Table-item">
				<span style="margin-left: auto;">Bolt!</span>
			</div>
		</div>
		<div class="Table-row">
			<div class="Table-item Table-item-grow-4">
				Leapfrog UI
			</div>
			<div class="Table-item">
				0.1.0
			</div>
			<div class="Table-item Table-item-grow-3">
				<ul class="button-area">
					<li class="button"><a href=""><span><i class="fa fa-refresh"></i>Update</span></a></li>
				</ul>
			</div>
		</div>
		<div class="Table-row">
			<div class="Table-item Table-item-grow-4">
