<div id="rgblighting">
    <div class="Table">
        <div class="rgb-topic" data-bind="visible: !editColorVisible()">        
            <div class="Table-row Table-header">
                <div class="Table-item">
                    {{ _('Select color pattern') }}
                </div>
            </div> 

            <ul class="rgb_main">
                <li class="rgb_name">
                    <a href="#topic">
                        <span>{{ _('Startup Color') }}</span>
                    </a>
                </li>
                <li class="rgb-start" data-bind="click: function () { editSettings('startup') }">
                    <a href="#">
                         <span><i class="fa fa-pencil"></i>{{ _(' Edit') }}</span>
                    </a>
                </li>
            </ul>
            
            <ul class="rgb_main">
                <li class="rgb_name">
                    <a href="#topic">
