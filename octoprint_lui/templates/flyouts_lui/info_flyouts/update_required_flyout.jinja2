<aside id="update_required_flyout" class="flyout">
  <div class="flyout-header bg-yellow">
    <h4>
      <i class="fa fa-exclamation-triangle"></i>{{ _('Update required') }}
    </h4>
  </div>
  <div class="flyout-body">
    <div id="update_required_flyout_content">
      <div id="update_required">
        <div class="Table">
          <div class="Table-row">
            <div class="Table-item">
              <span data-bind="visible: firmwareUpdateRequired">
                {{ _('The firmware of your printer is outdated. Please update your firmware to version ') }}<span data-bind="text: firmwareVersionRequirement"></span>{{ _(' or higher.') }}
              </span>
              <span data-bind="visible: softwareUpdateRequired">
                {{ _('A software component of your printer is outdated. Please connect your printer to the internet and update the software before you continue.') }}
              </span>
            </div>
          </div>
          <div class="Table-row" data-bind="visible: firmwareUpdateRequired">
            <div class="Table-item">
              <span>
                {{ _('If you are unable to update the firmware automatically, please visit support.lpfrg.com to download and update the firmware manually.') }}
              </span>
            </div>
          </div>
          <div class="Table-row">
            <div class="Table-item">
              <ul class="button-area">
                <li class="button">
                  <a href="#" data-bind="touchClick: function () {showUpdateFlyout()}, css: { disabled: !loginState.loggedIn() }">
                    <span>
                      {{ _('Update') }}
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="Table-row">
            {% if local_addr %}

            <div class="Table-item">
              <ul class="button-area">
                <li class="button secondary-button">
                  <a href="#" data-bind="click: showWirelessFlyout">
                    <span>
                      <i class="fa fa-wifi" style="padding-left: 0.5em;"></i>{{ _('Wireless') }}
                    </span>
                  </a>
                </li>
              </ul>
            </div>
            {% else %}

            <div class="Table-item">
              <ul class="button-area">
                <li class="button secondary-button">
                  <a href="#" data-bind="click: showLoginFlyout">
                    <span>
                      <i class="fa fa-user" style="padding-left: 0.5em;"></i>{{ _('Login') }}
                    </span>
                  </a>
                </li>
              </ul>
            </div>
            {% endif %}

            <div class="Table-item">
              <ul class="button-area">
                <li class="button failed-button">
                  <a href="#" data-bind="touchClick: function () {navigation.requestSystemShutdown()}">
                    <span>
                      <i class="fa fa-power-off" style="padding-left: 0.5em;"></i>{{ _('Shutdown') }}
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</aside>
