<aside id="locallock_flyout" class="flyout">
  <div class="flyout-header">
    <h4>{{ _('Security') }}</h4>
  </div>
  <div class="flyout-body">
    <!-- ko allowBindings: false -->
    <div id="locallock_flyout_content" class="flyout_content">
      <div class="Table">
        <div class="Table-header Table-row">
          <div class="Table-item">
            {{ _('Printer locked') }}
          </div>
        </div>
        <div class="Table-row">
          <div class="Table-item">
            <span>{{ _('Your printer is currently locked. Please enter the unlock code to continue.') }}</span>
          </div>
        </div>
        <div class="Table-row" data-bind="visible: triesTimeout()">
            <div class="Table-item">
                <span>{{ _('Max number of invalid unlock attempts reached, please wait ') }}<span data-bind="text: invalidUnlockTimer"></span> {{ _('seconds to try again.') }}</span>
            </div>
        </div>
        <div class="Table-row" data-bind="visible: !triesTimeout()">
          <div class="Table-item">
            {{ _('Unlock code') }}
          </div>
          <div class="Table-item">
            <input type="password" data-bind="value: localLockCode" pattern="[0-9]*" inputmode="numeric"/>
          </div>
        </div>
        <div class="Table-row">
          <div class="Table-item">
            <ul class="button-area" data-bind="css: {disabled: triesTimeout()}">
              <li class="button ok-button" >
                <a href="#" data-bind="touchClick: function () { unlock(localLockCode()) }">
                  <span>
                    {{ _('Unlock') }}
                  </span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- /ko -->
  </div>
</aside>