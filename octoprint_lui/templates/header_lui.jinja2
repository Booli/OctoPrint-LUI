<header id="header" class="app-header">
    <div class="header_logo" data-bind="click: function() { location.reload(); }">
        <a href="#" class="logo">
            <img src="{{ url_for("plugin.lui.static", filename="img/logo.png") }}" width="60%" height="60%">
        </a>
    </div>
    {% if debug_lui %}
    <div style="padding-right: 2em" data-bind="click: doDebuggingAction">
      <a href="#">
        Debug
      </a>
    </div>
    {% endif %}
    <div class="header_status">
        Status: <span data-bind="text: printerState.stateString"></span>
    </div>
    <div class="header_activity" data-bind="visible: printerState.currentActivity()">
      <i class="fa fa-spinner fa-pulse fa-1x fa-fw"></i>
      <span data-bind="text: printerState.currentActivity()"></span>
    </div>
